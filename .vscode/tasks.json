{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker",
      "type": "shell",
      "command": "docker compose up --build",
      "group": "build"
    },
    {
      "label": "Docker Reset",
      "type": "shell",
      "command": "docker compose down -v",
      "group": "build"
    },
    {
      "label": "EF Migrate (Update Database Schema)",
      "type": "shell",
      "command": "dotnet ef migrations add ${input:efName} && dotnet ef database update",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/discord-net"
      }
    },
    {
      "label": "Swig Generate",
      "type": "shell",
      "command":
          "rm -rf ./bindings && mkdir bindings && swig -csharp -c++ -outdir ./bindings -namespace Native -v swig.i",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/discord-net/swig"
      }
    }
  ],
  "inputs": [
    {
      "id": "efName",
      "description": "Name your Database Schema Update",
      "type": "promptString"
    }
  ]
}
